# http://editorconfig.org

# VS Code : (Ctrl+E) ext install editorconfig

root = true

[*]
charset      = utf-8
end_of_line  = lf
indent_style = space
indent_size  = 2

[*.md]
trim_trailing_whitespace = false

[*.ps1]
charset      = utf-8-bom
end_of_line  = crlf

[*.reg]
charset      = utf-16le
end_of_line  = crlf
